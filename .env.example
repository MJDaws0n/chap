# Chap Server Environment Configuration
# Copy this file to .env and update values
#
# This file is for the SERVER's configuration (or development node + server environment).

# Application
APP_NAME=Chap
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_SECRET=change_this_to_random_secret_key_at_least_32_characters

# Server Ports
APP_PORT=8080
WS_PORT=8081

# Database
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=chap
DB_USERNAME=chap
DB_PASSWORD=chap_secret
DB_ROOT_PASSWORD=chap_root_secret

# Session
SESSION_LIFETIME=120
SESSION_SECURE=false

# File Upload Limits
UPLOAD_MAX_SIZE=104857600

# Human verification (captcha)
# Provider: none | recaptcha | autogate | none
CAPTCHA_PROVIDER=none
CAPTCHA_THEME=dark
# RECAPTCHA_SITE_KEY=YOUR_RECAPTCHA_SITE_KEY_HERE
# RECAPTCHA_SECRET_KEY=YOUR_RECAPTCHA_SECRET_KEY_HERE
# AUTOGATE_PUBLIC_KEY=YOUR_AUTOGATE_PUBLIC_KEY_HERE
# AUTOGATE_PRIVATE_KEY=YOUR_AUTOGATE_PRIVATE_KEY_HERE


# EVERYTHING BELLOW THIS LINE SHOULD NOT BE USED IN A PRODUCTON ENVIRONMENT
# IT IS ONLY FOR DEVELOPMENT AND TESTING PURPOSES
# LEAVE COMMENTED IF YOU DON'T UNDERSTAND ITS PURPOSE

